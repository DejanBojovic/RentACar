@model RentACar.Models.Car

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<form style="display: flex; flex-direction: column;" action="/Cars/UpdateSubmit" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Id</label>
        <input class="form-control" name="id" value=@Model.Id readonly />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" name="name" value=@Model.Name />
    </div>

    <input class="btn btn-primary" type="submit" value="Update Car" />
</form>

