@model RentACar.Models.CustomerMembershipTypeViewModel

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<form style="display: flex; flex-direction: column;" action="/Customers/UpdateSubmit" method="post">
    @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Id</label>
            <input class="form-control" name="id" value=@Model.Customer.Id readonly />
        </div>

        <div class="form-group">
            <label>Name</label>
            <input class="form-control" required type="text" name="name" value=@Model.Customer.Name />
        </div>
        <div class="form-group">
            <p style="font-weight: bold">IsSubscribedToNewsletter</p>
            @if (@Model.Customer.IsSubscribedToNewsletter == "0")
            {
                <div class="form-check">
                    <input class="form-check-input" required type="radio" id="no" name="IsSubscribedToNewsletter" value="0" checked />
                    <label class="form-check-label" for="no">No</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" required type="radio" id="yes" name="IsSubscribedToNewsletter" value="1" />
                    <label class="form-check-label" for="yes">Yes</label>
                </div>
            }
            else
            {
                <div class="form-check">
                    <input class="form-check-input" required type="radio" id="no" name="IsSubscribedToNewsletter" value="0" />
                    <label class="form-check-label" for="no">No</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" required type="radio" id="yes" name="IsSubscribedToNewsletter" value="1" checked />
                    <label class="form-check-label" for="yes">Yes</label>
                </div>
            }
        </div>
        <div class="form-group">
            <label>MembershipId</label>
            <select class="form-control" required name="MembershipId" id="MembershipId">
                @foreach (var item in Model.MembershipTypes)
                {
                    <option selected=@(Model.Customer.MembershipTypeId == item.Id ? "selected" : null) value=@item.Id>Months: @item.DurationInMonths</option>
                }
            </select>
        </div>

        <input class="btn btn-primary" type="submit" value="Update Customer" />
</form>
