@model List<RentACar.Models.MembershipType>

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form style="display: flex; flex-direction: column;" action="/Customers/CreateSubmit" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Name</label>
        <input placeholder="Customer's name" class="form-control" required type="text" name="name" />
    </div>
    <div class="form-group">
        <p style="font-weight: bold">IsSubscribedToNewsletter</p>
        <div class="form-check">
            <input class="form-check-input" required type="radio" id="no" name="IsSubscribedToNewsletter" value="0" />
            <label class="form-check-label" for="no">No</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" required type="radio" id="yes" name="IsSubscribedToNewsletter" value="1" checked />
            <label class="form-check-label" for="yes">Yes</label>
        </div>
    </div>
    <div class="form-group">
        <label>MembershipId</label>
        <select class="form-control" required name="MembershipId" id="MembershipId">
            @foreach (var item in Model)
            {
                <option value=@item.Id>Months: @item.DurationInMonths</option>
            }
        </select>
    </div>

    <input class="btn btn-primary" type="submit" value="Create Customer" />
</form>

